#!/bin/bash

ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR="@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR@" ;
BUILD_THIRD_IS_CROSS="@CMAKE_CROSSCOMPILING@"
BUILD_THIRD_IS_CROSS="$(echo $BUILD_THIRD_IS_CROSS | tr '[:upper:]' '[:lower:]')"
LOW_MEMORY_MODE="@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_MODE@"
LOW_MEMORY_MODE="$(echo $LOW_MEMORY_MODE | tr '[:upper:]' '[:lower:]')"

if [[ "x$LOW_MEMORY_MODE" == "xtrue" ]] || [[ "x$LOW_MEMORY_MODE" == "xyes" ]] || 
    [[ "x$LOW_MEMORY_MODE" == "x1" ]] || [[ "x$LOW_MEMORY_MODE" == "xon" ]]; then
    ALLOW_PARALLEL_BUILD_FLAGS=0 ;
else
    ALLOW_PARALLEL_BUILD_FLAGS=1 ;
fi

set -x ;

# build host protoc-gen-upb first
export PATH="$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR:$PATH" ;

if [[ ! -e "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR" ]]; then
    mkdir -p "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR" ;    
fi

cd "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_TOOL_BUILD_DIR" ;

if [[ -e "CMakeCache.txt" ]]; then
    rm -f "CMakeCache.txt" ;
fi

if [[ ! -e "@PROJECT_THIRD_PARTY_HOST_INSTALL_DIR@/bin/protoc-gen-upb" ]] && [[ ! -e "@PROJECT_THIRD_PARTY_HOST_INSTALL_DIR@/bin/protoc-gen-upb.exe" ]]; then
    source "@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_HOST_RESET_BUILD_ENVS_BASH@"
    @ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_HOST_BUILD_FLAGS_BASH@ "-DCMAKE_INSTALL_PREFIX=@PROJECT_THIRD_PARTY_HOST_INSTALL_DIR@" "-DATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_STANDALONE=@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_UPB_STANDALONE@" ;

    if [[ $ALLOW_PARALLEL_BUILD_FLAGS -eq 1 ]]; then
        "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" -j || "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" || "@CMAKE_COMMAND@" --build . --verbose --config "@CMAKE_BUILD_TYPE@" ;
    else
        "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" || "@CMAKE_COMMAND@" --build . --verbose --config "@CMAKE_BUILD_TYPE@" ;
    fi

    source "@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_HOST_RESTORE_BUILD_ENVS_BASH@"
fi
