chcp 65001

@echo off

where pwsh

if not ERRORLEVEL 0 (
    goto USE_POWERSHELL
)

:USE_POWERSHELL_CORE

cd %~dp0

pwsh -NoProfile -InputFormat None -ExecutionPolicy Bypass -NonInteractive -NoLogo -File run-build-release.ps1

exit %ERRORLEVEL%

:USE_POWERSHELL

@"%SystemRoot%\System32\WindowsPowerShell\v1.0\powershell.exe" -NoProfile -InputFormat None -ExecutionPolicy Bypass -NonInteractive -NoLogo -File run-build-release.ps1
