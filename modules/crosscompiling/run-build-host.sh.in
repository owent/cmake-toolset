#!/bin/bash

ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR="@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR@" ;
BUILD_THIRD_IS_CROSS="@CMAKE_CROSSCOMPILING@"
BUILD_THIRD_IS_CROSS="$(echo $BUILD_THIRD_IS_CROSS | tr '[:upper:]' '[:lower:]')"
LOW_MEMORY_MODE="@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_MODE@"
LOW_MEMORY_MODE="$(echo $LOW_MEMORY_MODE | tr '[:upper:]' '[:lower:]')"

if [[ "x$LOW_MEMORY_MODE" == "xtrue" ]] || [[ "x$LOW_MEMORY_MODE" == "xyes" ]] || 
    [[ "x$LOW_MEMORY_MODE" == "x1" ]] || [[ "x$LOW_MEMORY_MODE" == "xon" ]]; then
    LOW_MEMORY_MODE_FLAGS=1 ;
else
    LOW_MEMORY_MODE_FLAGS=0 ;
fi

set -x ;

# build for host
export PATH="$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR:$PATH" ;

if [[ ! -e "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR" ]]; then
    mkdir -p "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR" ;    
fi

cd "$ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_TOOL_BUILD_DIR" ;

if [[ -e "CMakeCache.txt" ]]; then
    rm -f "CMakeCache.txt" ;
fi

source "@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_HOST_RESET_BUILD_ENVS_BASH@"
@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_CROSSCOMPILING_HOST_BUILD_FLAGS_BASH@ "-DCMAKE_INSTALL_PREFIX=@PROJECT_THIRD_PARTY_HOST_INSTALL_DIR@" ;

if [[ $LOW_MEMORY_MODE_FLAGS -eq 0 ]]; then
    "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" -j || "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" "-j@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_JOBS@" || "@CMAKE_COMMAND@" --build . --verbose --config "@CMAKE_BUILD_TYPE@" "-j@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_JOBS@" ;
else
    "@CMAKE_COMMAND@" --build . --config "@CMAKE_BUILD_TYPE@" "-j@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_JOBS@" || "@CMAKE_COMMAND@" --build . --verbose --config "@CMAKE_BUILD_TYPE@" "-j@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_LOW_MEMORY_JOBS@" ;
fi

source "@ATFRAMEWORK_CMAKE_TOOLSET_THIRD_PARTY_HOST_RESTORE_BUILD_ENVS_BASH@"
